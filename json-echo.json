{
  "$schema": "https://raw.githubusercontent.com/websublime/json-echo/refs/heads/main/schema.json",
  "port": 3001,
  "hostname": "localhost",
  "routes": {
    "/api/v1/health": {
      "method": "GET",
      "description": "Health check endpoint",
      "headers": {
        "Content-Type": "application/json"
      },
      "response": {
        "status": 200,
        "body": {
          "timestamp": "{{timestamp}}"
        }
      }
    },
    "/api/v1/ping": {
      "method": "GET",
      "description": "Ping endpoint",
      "headers": {
        "Content-Type": "application/json"
      },
      "response": "ping-response.json"
    },
    "/api/v1/posts": {
      "method": "GET",
      "description": "Posts endpoint",
      "headers": {
        "Content-Type": "application/json"
      },
      "response": "posts-response.json"
    },
    "/api/v1/posts/{id}": {
      "method": "GET",
      "description": "Get post by ID",
      "headers": {
        "Content-Type": "application/json"
      },
      "response": "posts-response.json"
    },
    "/api/v1/products": {
      "method": "GET",
      "results_field": "results",
      "description": "Products endpoint",
      "headers": {
        "Content-Type": "application/json"
      },
      "response": "products-response.json"
    },
    "/api/v1/products/{code}": {
      "method": "GET",
      "id_field": "code",
      "results_field": "results",
      "description": "Get product by code",
      "headers": {
        "Content-Type": "application/json"
      },
      "response": "products-response.json"
    }
  }
}
